<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    app:layoutDescription="@xml/activity_splash_scene">

    <TextView
        android:id="@+id/tvWelcome"
        style="@style/SplashTextStyle"
        android:layout_marginBottom="10dp"
        android:text="@string/welcome_text"
        app:layout_constraintBottom_toTopOf="@+id/tvCreator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCreator"
        style="@style/SplashTextStyle"
        android:text="@string/welcome_creator_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/SplashTextStyle"
        android:layout_marginTop="10dp"
        android:text="@string/welcome_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreator" />

</androidx.constraintlayout.motion.widget.MotionLayout>